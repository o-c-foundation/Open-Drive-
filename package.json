{
  "name": "opendrive",
  "private": true,
  "version": "1.0.0",
  "description": "OpenDrive by The Open Crypto Foundation - Secure, decentralized storage powered by IPFS.",
  "author": "The Open Crypto Foundation",
  "maintainers": [
    "opencryptofoundation"
  ],
  "license": "Apache-2.0 OR MIT",
  "packageManager": "pnpm@9.8.0",
  "scripts": {
    "prepare": "pnpm run build",
    "build": "cd app && pnpm run build",
    "dev": "cd app && pnpm run dev",
    "clean": "rm -rf node_modules app/node_modules app/dist",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint": "cd app && pnpm run lint",
    "test": "cd app && pnpm run test"
  },
  "workspaces": [
    "app"
  ],
  "keywords": [
    "decentralized",
    "storage",
    "ipfs",
    "open-crypto-foundation",
    "opendrive"
  ],
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/o-c-foundation/Open-Drive.git"
  },
  "bugs": {
    "url": "https://github.com/o-c-foundation/Open-Drive/issues"
  },
  "homepage": "https://github.com/o-c-foundation/Open-Drive#readme"
}
